<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".OptionActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="119dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/logo1" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:autoText="false"
            android:text="Online Consultancy "
            android:textAllCaps="false"
            android:textColor="@color/colorBlue"
            android:textColorHighlight="@color/colorPrimary"
            android:textFontWeight="20"
            android:textSize="24sp"
            android:textStyle="normal|bold" />
        <TextView
            android:id="@+id/TextView_Optionintro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Here you can pick whatever you are looking for. It will take you to respective page according to your choice and interest and show you the exact thing that you are looking for."
            android:textSize="15sp"
            />

        <TextView
            android:id="@+id/TextView_prefsOption"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="30dp"
            android:paddingLeft="20dp"
            android:text="Choose from following:"
            android:textColor="@color/colorBlue"
            android:textSize="20sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/radioOptionGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp">

            <RadioButton
                android:id="@+id/radioUniversities"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClickedOptions"
                android:text="Search Universities"
                android:textColor="@color/colorBlue"
                android:textSize="18sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/radioCountries"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClickedOptions"
                android:text="Search Countries"
                android:textColor="@color/colorBlue"
                android:textSize="18sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/radioScholarships"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:onClick="onRadioButtonClickedOptions"
                android:text="Search Scholarships"
                android:textColor="@color/colorBlue"
                android:textSize="18sp"
                android:textStyle="bold" />

        </RadioGroup>


        <Button
            android:id="@+id/btn_optionfilter_next"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="150dp"
            android:background="@drawable/round_button"
            android:drawableLeft="@color/ic_launcher_background"
            android:onClick="onNextOptions"
            android:text="âœ”"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="25sp" />


    </LinearLayout>

</RelativeLayout>


